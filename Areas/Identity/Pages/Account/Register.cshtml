@page
@model RegisterModel
@{
    ViewData["Title"] = "Dodaj korisnika";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
           
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Input.UserRole" asp-value="Model.Roles"></label>
            <select asp-for="Input.UserRole" >
            <option value="Agent">Agent</option>
            <option value="Korisnik">Korisnik</option>
           </select>
           <span asp-validation-for="Input.UserRole" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </form>
    </div>
</div>
@if ( (Model.myToaster != null) && (Model.myToaster.Message != ""))
        {
            <div class="toast mt-3" id="mytoastr">
                <div class="toast-body @Model.myToaster.CssClass">
                    @Model.myToaster.Message
                </div>
            </div>
            
        }



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
   <script>
                $(document).ready(function () {
                $('#mytoastr').toast({ delay: 2000 });
                    $('#mytoastr').toast('show');
                
                });
  </script>
 
}
